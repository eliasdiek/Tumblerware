.page-hero-wrapper {
	max-width: 1024px;
	margin: 48px auto 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	position: relative;
}
@media screen and (max-width: 768px) {
	.page-hero-wrapper {
		margin: 0 auto;
	}
}
.page-hero-wrapper .section-header {
	margin-top: 0;
}
.page-hero-wrapper .section-header .text-above-heading {
	font-size: 16px;
	font-weight: 600;
}
@media screen and (max-width: 768px) {
	.page-hero-wrapper .section-header .text-above-heading {
		font-size: 14px;
	}
}
.page-hero-wrapper .section-body {
	max-width: 676px;
}
.page-hero-wrapper .section-body p {
	margin: 0;
	font-size: 14px;
	font-weight: 400;
}
.page-hero-wrapper .section-body .section-cta {
	margin-top: 50px;
}
.page-hero-wrapper .section-body .section-cta a {
	color: #243269;
	font-size: 16px;
	font-weight: 600;
}
.page-hero-wrapper .move-down {
	position: absolute;
	bottom: 0;
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	padding-bottom: 50px;
}
.page-hero-wrapper .move-down a {
	-webkit-animation: fade 0.5s linear 0.5s infinite alternate;
	animation: fade 0.5s linear 0.5s infinite alternate;
}
.page-hero-wrapper .move-down a:hover {
	-webkit-animation-play-state: paused;
	animation-play-state: paused;
	opacity: 1;
}
.page-hero-wrapper .move-down a span {
	display: block;
	width: 0;
	height: 0;
	border-left: 20px solid transparent;
	border-right: 20px solid transparent;
	border-top: 32px solid #fff;
}

@-webkit-keyframes fade {
	0% {
		opacity: 1;
	}
	100% {
		opacity: 0.2;
	}
}

@keyframes fade {
	0% {
		opacity: 1;
	}
	100% {
		opacity: 0.2;
	}
}

.text-with-image-wrapper {
	padding: 0;
	display: flex;
	margin: 0 auto;
}
@media screen and (max-width: 768px) {
	.text-with-image-wrapper {
		display: flex;
		flex-direction: column;
	}
}
.text-with-image-wrapper .text-block {
	padding: 0;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.text-with-image-wrapper .text-block .text-block-wrapper {
	max-width: 615px;
	padding: 35px 35px 35px 130px;
}
@media screen and (max-width: 768px) {
	.text-with-image-wrapper .text-block .text-block-wrapper {
		padding: 60px 50px;
	}
}
.text-with-image-wrapper .text-block .text-block-wrapper .heading {
    font-family: {{ heading_font_family }};
    font-weight: {{ header_family.weight }};
    font-style: {{ header_family.style }};
    font-size: 26px;
    line-height: 30px;
    color: #51453f;
    text-transform: uppercase;
    padding: 10px 0 0 0;
    letter-spacing: -1px;
}
.text-with-image-wrapper .text-block .text-block-wrapper .description {
	font-size: 14px;
	font-weight: 400;
}
.text-with-image-wrapper .image-block {
	padding: 0;
	width: 100%;
}
@media screen and (max-width: 768px) {
	.text-with-image-wrapper .image-block {
		padding: 0;
	}
}
.text-with-image-wrapper .image-block img {
	display: block;
