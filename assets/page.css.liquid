{%- assign heading_font_family = "'Futura condensed x-bold',sans-serif" -%}
{{ header_family | font_face }}

html {
	scroll-behavior: smooth;
}

.page\.about__page .main-content,
.page\.how-to__page .main-content,
.page\.reviews__page .main-content,
.page\.careers__page .main-content {
	margin-top: 0;
	padding-top: 61px;
}
@media screen and (min-width: 768px) {
	.page\.about__page .main-content,
	.page\.how-to__page .main-content,
	.page\.reviews__page .main-content,
	.page\.careers__page .main-content {
		padding-top: 13px;
	}
}

.page\.about__page .rich-text-section_new {
	background-color: #fff;
	margin-top: 0 !important;
}

.page\.how-to__page .rich-text-section_new,
.page\.reviews__page .rich-text-section_new {
	margin-top: 0 !important;
