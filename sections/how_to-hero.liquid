<style>
    .index-page_hero-section {
        background-color: {{ section.settings.bg_color }};
    }
    {% if section.settings.padding_size == "large" %}
    .page-hero-wrapper {
        min-height: calc(100vh - 102px);
        padding: 60px;
    }
    @media screen and (max-width: 768px) {
        .page-hero-wrapper {
            min-height: calc(100vh - 202px);
            padding: 60px;
        }
    }
    {% else %}
    .page-hero-wrapper {
        padding: 60px;
    }
    {% endif %}
</style>

<div class="page-hero-wrapper">
    <div class="section-header text-center">
        <h1>{{ section.settings.heading }}</h1>
    </div>
    <div class="section-body text-center">
        {{ section.settings.description }}
    </div>

    <div class="move-down">
        <a href="#" id="move-down-btn">
            <span></span>
        </a>
    </div>
</div>
  
{% schema %}
{
"name": "Page hero",
"class": "index-page_hero-section",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "A short sentence describing what someone will receive by heading"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>A short sentence describing what someone will receive by description</p>"
    },
    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
    },
    {
        "type": "select",
        "id": "padding_size",
        "default": "large",
        "label": "Padding size",
        "options": [
            {
                "value": "large",
                "label": "Large"
            },
            {
                "value": "small",
                "label": "Small"
            }
        ]
    }
],
"presets": [
    {
        "name": "Page hero",
        "category": "Text"
    }
]
}
{% endschema %}
  