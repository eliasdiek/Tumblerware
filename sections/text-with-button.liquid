<style>
    .index-text_with_button-section {
        background-color: {{ section.settings.bg_color }};
    }
</style>

<div class="text-with-button-wrapper">
    <div class="section-header">
        <h2 class="heading text-center">{{ section.settings.heading }}</h2>
        <div class="sub-heading">{{ section.settings.sub_heading }}</div>
    </div>
    <div class="section-body">
        <a href="{{ section.settings.button_link }}" target="_blank" class="btn">{{ section.settings.button_text }}</a>
    </div>
</div>

{% schema %}
{
"name": "Text with button",
"class": "index-text_with_button-section",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "A short sentence describing what someone will receive by heading"
    },
    {
        "type": "richtext",
        "id": "sub_heading",
        "label": "Subheading",
        "default": "<p>A short sentence describing what someone will receive by subheading</p>"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
    },
    {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
    },
    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
    }
],
"presets": [
    {
        "name": "Text with button",
        "category": "Text"
    }
]
}
{% endschema %}
  