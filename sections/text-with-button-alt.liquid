<style>
    .index-text_with_button_2-section {
        background-color: {{ section.settings.bg_color }};
        padding: 50px 0;
        text-align: center;
    }
    .index-text_with_button_2-section .wrapper {
        max-width: 1280px;
    }
    .index-text_with_button_2-section h2, .index-text_with_button_2-section p, .index-text_with_button_2-section a {
        color: {{ section.settings.txt_color }};
    }
    .index-text_with_button_2-section p {
        font-size: 14px;
        line-height: 24px;
        font-weight: 400;
    }
    .index-text_with_button_2-section .section-header {
        margin-top: 0;
    }
    .index-text_with_button_2-section .section-footer {
        margin: 10px 0 0 0;
    }
    .index-text_with_button_2-section .btn_secondary {
        background: transparent;
        border-color: {{ section.settings.txt_color }};
        color: {{ section.settings.txt_color }};
    }
    .index-text_with_button_2-section .btn_secondary:hover{
        background: transparent;
        border-color:#676767;
        color:#676767;
    }
</style>

<div class="text_with_button_2-wrapper">
    <div class="wrapper">
        <div class="page-width">
            {% unless section.settings.heading == blank %}
            <div class="section-header">
                <h2 class="product_text1_new home-section-heading text-center">{{ section.settings.heading }}</h2>
            </div>
            {% endunless %}
        
            {% unless section.settings.body == blank %}
            <div class="section-body">
                {{ section.settings.body }}
            </div>
            {% endunless %}
        
            {% unless section.settings.button_link == blank and section.settings.button_text == blank %}
            <div class="section-footer">
                <a href="{{ section.settings.button_link }}" class="btn btn_secondary">{{ section.settings.button_text }}</a>
            </div>
            {% endunless %}
        </div>
    </div>
</div>

{% schema %}
{
"name": "Text with button (2)",
"class": "index-text_with_button_2-section",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "A short sentence describing what someone will receive by heading"
    },
    {
        "type": "richtext",
        "id": "body",
        "label": "Description",
        "default": "<p>A short sentence describing what someone will receive by body text</p>"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
    },
    {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
    },
    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
    },
    {
        "type": "color",
        "id": "txt_color",
        "label": "Text Color"
    }
],
"presets": [
    {
        "name": "Text with button (2)",
        "category": "Text"
    }
]
}
{% endschema %}
  