<style>
    .auto-play-videos__wrapper {
        display: grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        align-items: center;
        justify-content: center;
        gap: 30px;
        padding: 30px 0;
    }
    .auto-play-videos__wrapper .video-wrapper {
        padding-bottom: 0;
    }
    .auto-play-videos__wrapper .video-wrapper iframe {
        position: unset;
        height: {{  section.settings.video_height }}px;
    }
    .auto-play-videos .index_product_right_new {
        width: 100%;
        padding: 35px 40px 10px;
        text-align: center;
    }

    @media screen and (max-width: 900px) {
        .auto-play-videos__wrapper {
            display: grid;
            grid-template-columns: repeat(1, minmax(0, 1fr));
            align-items: center;
            justify-content: center;
            gap: 30px;
            padding: 30px 0;
        }
    }
</style>

{% if section.blocks.size > 0 %}
  <div class="auto-play-videos">
    <div class="wrapper">
      <div class="page-width">
        {% if section.settings.title != blank or section.settings.description != blank %}
        <div class="index_product_right_new">
            {% if section.settings.title != blank %}
            <div class="product_text2_new">
              {{ section.settings.title }}
            </div>
            {% endif %}
          
            {% if section.settings.description != blank %}
            <div class="product_desc_new">
              <p>{{ section.settings.description }}</p>
            </div>
            {% endif %}
        </div>
        {% endif %}

        <div class="auto-play-videos__wrapper">
            {% for block in section.blocks %}
            <div class="auto-play-video__item">
                {% if block.settings.video_url == blank %}
                    <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720&autoplay=1&loop=1&autohide=1&rel=0&showinfo=0&controls=0&disablekb=1&enablejsapi=1&iv_load_policy=3&hd=1&mute=1" width="850" height="480" frameborder="0" allowfullscreen loading="lazy" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"></iframe>
                {% else %}
                    <iframe src="//www.youtube.com/embed/{{ block.settings.video_url.id }}?rel=0&showinfo=0&vq=720&autoplay=1&loop=1&autohide=1&rel=0&showinfo=0&controls=0&disablekb=1&enablejsapi=1&iv_load_policy=3&hd=1&mute=1" width="850" height="480" frameborder="0" allowfullscreen loading="lazy" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"></iframe>
                {% endif %}
            </div>
            {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Auto-play videos",
  "max_blocks": 8,
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Title"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Description"
    },
    {
        "type": "range",
        "id": "video_height",
        "min": 300,
        "max": 1000,
        "step": 20,
        "unit": "px",
        "label": "Video height",
        "default": 400
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video_url",
          "id": "video_url",
          "label": "Video URL",
          "accept": [
            "youtube"
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Auto-play videos"
    }
  ]
}
{% endschema %}
